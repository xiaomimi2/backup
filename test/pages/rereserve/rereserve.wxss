.container{
  background-color: #f6f6f6;
}
.hotel_title{
  width:100%;
  height:62px;
  padding:10px 16px;
  color: #4A4A4A;
  box-sizing: border-box;
  background-color:#fff;
  margin-bottom:10px;
}
.hotel_title .hotel_name{
  font-size: 14px;
  line-height: 20px;
  margin-bottom:4px;
}
.hotel_title .hotel_roomnum{
  font-size: 12px;
}
.hotel_info{
  width:100%;
  padding:0px 12px;
  box-sizing: border-box;
  background-color:#fff;
}
.hotel_info > view,.hotel_info > picker{
    font-size: 12px;
    color: #4A4A4A;
    height:40.8px;
    line-height: 40.8px;
    display:flex;
}
.hotel_info text{
  width:48px;
  flex:none;
  margin-right:28px;
}
.hotel_info  input{
  height:100%;
  flex-grow:1; 
}
