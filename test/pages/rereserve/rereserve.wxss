.container{
  background-color: #f6f6f6;
}
.page-title .page-image{
  background-color:#2DA8E9;
}
.hotel_title{
  width:100%;
  height:129.166rpx;
  padding:20.833rpx 33.333rpx;
  color: #4A4A4A;
  box-sizing: border-box;
  background-color:#fff;
  margin-bottom:20.833rpx;
}
.hotel_title .hotel_name{
  font-size: 29.166rpx;
  line-height: 41.666rpx;
  margin-bottom:8.333rpx;
}
.hotel_title .hotel_roomnum{
  font-size: 25rpx;
}
.hotel_info{
  width:100%;
  padding:0px 25rpx;
  box-sizing: border-box;
  background-color:#fff;
}
.hotel_info > view,.hotel_info > picker{
    font-size: 25rpx;
    color: #4A4A4A;
    height:85rpx;
    line-height: 85rpx;
    display:flex;
}
.hotel_info text{
  width:100rpx;
  flex:none;
  margin-right:58.333rpx;
}
.hotel_info  input{
  height:100%;
  flex-grow:1; 
}
