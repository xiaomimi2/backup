.main_market {
  width: 100%;
  display: flex;
}

.main_market .market_left {
  width: 70px;
  font-size: 10px;
  color: #4a4a4a;
  flex: none;
}

.main_market .market_left view {
  width: 100%;
  height: 40px;
  line-height: 40px;
  text-align: center;
  background-color: #f6f6f6;
}

.main_market .market_right {
  flex-grow: 1;
  position: relative;
  padding:21px 16px;
}

.main_market .market_right .tabbar {
  position: absolute;
  font-size: 10px;
  color: #4a4a4a;
  border-left: 2px solid #2c75ca;
  top: 2px;
  left: 6.5px;
  text-indent: 10px;
}

.market_list {
  display: flex;
  padding:18px 0;
  border-bottom:1px solid #E4E4E4;
}

.market_list image {
  width: 64px;
  height: 64px;
  background-color: #d8d8d8;
  border-radius: 4px;
  margin-right:10px;
}

.market_list .market_list_info {
  flex-grow: 1;
}

.market_list .market_list_info .info_name {
  font-size: 12px;
  color: #4a4a4a;
  line-height: 14px;
  margin-bottom:4px;
}

.market_list .market_list_info .info_size,
.market_list .market_list_info .info_total {
  font-size: 10px;
  color: #9b9b9b;
  line-height: 12px;
  margin-bottom:2px;
}
.market_list .market_list_info .info_size{

}
.market_list .market_list_info .info_total{
  margin-bottom:5px;
}


.market_list .market_list_info .info_price {
  font-size: 12px;
  color: #D0021B;
  letter-spacing: 0.12px;
  line-height: 17px;
}

.market_list .market_op {
  flex: none;
  width: 80px;
  display: flex;
  align-items: center;
}

.market_submit, .market_plus {
  width: 16px;
  height: 16px;
  border-radius: 50%;
  line-height: 16px;
  vertical-align: middle;
  text-align: center;
  font-size:20px;
}
.market_submit{
  border:1px solid #ccc;
  box-sizing: border-box;
  font-size: 12px;
  color: #4A4A4A;
  
}
.market_plus{
  background-color:#000;
  color:#fff;
}

.market_text {
  flex-grow: 1;
  text-align: center;
  font-size:12px;
  color:#4A4A4A;
}
