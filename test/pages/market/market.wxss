.page-title .page-image{
  background-color:#A75DCE;
}
.page-title .page-image image{
  width:43.75rpx;
  height:29.166rpx;
}
.main_market {
  width: 100%;
  display: flex;
}

.main_market .market_left {
  width: 145.833rpx;
  font-size: 20.8333rpx;
  color: #4a4a4a;
  flex: none;
}

.main_market .market_left view {
  width: 100%;
  height: 83.333rpx;
  line-height: 83.333rpx;
  text-align: center;
  background-color: #f6f6f6;
}

.main_market .market_right {
  flex-grow: 1;
  position: relative;
  padding:43.75rpx  33.333rpx;
}

.main_market .market_right .tabbar {
  position: absolute;
  font-size: 20.8333rpx;
  color: #4a4a4a;
  border-left: 2px solid #2c75ca;
  top: 4.166rpx;
  left: 13.5416rpx;
  text-indent: 20.8333rpx;
}

.market_list {
  display: flex;
  padding:37.5rpx 0;
  border-bottom:1px solid #E4E4E4;
}

.market_list image {
  width: 133.333rpx;
  height: 133.333rpx;
  background-color: #d8d8d8;
  border-radius: 8.333rpx;
  margin-right:20.8333rpx;
}

.market_list .market_list_info {
  flex-grow: 1;
}

.market_list .market_list_info .info_name {
  font-size: 25rpx;
  color: #4a4a4a;
  line-height: 29.166rpx;
  margin-bottom:8.333rpx;
}

.market_list .market_list_info .info_size,
.market_list .market_list_info .info_total {
  font-size: 20.8333rpx;
  color: #9b9b9b;
  line-height: 25rpx;
  margin-bottom:4.166rpx;
}
.market_list .market_list_info .info_size{

}
.market_list .market_list_info .info_total{
  margin-bottom:10.416rpx;
}


.market_list .market_list_info .info_price {
  font-size: 25rpx;
  color: #D0021B;
  letter-spacing: 0.25rpx;
  line-height: 35.416rpx;
}

.market_list .market_op {
  flex: none;
  width: 166.666rpx;
  display: flex;
  align-items: center;
}

.market_submit, .market_plus {
  width: 33.33rpx;
  height: 33.33rpx;
  border-radius: 50%;
  line-height: 30rpx;
  vertical-align: middle;
  text-align: center;
}
.market_submit{
  border:1px solid #ccc;
  box-sizing: border-box;
  font-size: 25rpx;
  color: #4A4A4A;
  
}
.market_plus{
  background-color:#000;
  color:#fff;
}

.market_text {
  flex-grow: 1;
  text-align: center;
  font-size:25rpx;
  color:#4A4A4A;
}
